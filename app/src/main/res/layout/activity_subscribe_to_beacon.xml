<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_subscribe_to_beacon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/device_name_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/proximity_uuid_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_name_subscribe" />

            <TextView
                android:id="@+id/major_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/proximity_uuid_subscribe" />


            <TextView
                android:id="@+id/minor_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/proximity_uuid_subscribe"
                android:layout_toRightOf="@id/major_subscribe"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/rssi_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/minor_subscribe" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
